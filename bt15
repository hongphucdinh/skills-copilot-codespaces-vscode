import turtle
import math
def draw(r):
    t = turtle.Turtle()
    t.hideturtle()
    t.pencolor('red')
    t.circle(r)
    turtle.done()
def area(r):
    return math.pi * r * r
r = float(input("Nhập vào bán kính: "))
draw(r)
s = area(r)
print("Diện tích của hình tròn có bán kính = {} là: {}".format(r, s))
