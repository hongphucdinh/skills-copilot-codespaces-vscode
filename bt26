with open('example.txt', 'w') as file:
    file.write('Hello, World!\n')
    file.write('This is a test file.')
with open('example.txt', 'r') as file:
    content = file.read()
    print(content)
with open('example.txt', 'a') as file:
    file.write('\nAppending this line.')
with open('example.txt', 'r') as file:
    content = file.read()
    print(content)
with open('example.txt', 'w') as file:
    file.write('')
with open('example.txt', 'r') as file:
    content = file.read()
    print(content) 
import os
os.remove('example.txt')
